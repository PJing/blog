/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.red{
  background-color:red; 
}
.watch{
  /* background-image: linear-gradient(0deg,rgb(255,52,0),rgb(255,52,81)); */
  background-color: rgb(245, 245, 245);
  width: 100vw;
  height: 100vh;
  position: relative;
}
.circle{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 650rpx;
  height: 650rpx;
  margin: auto;
  border-radius: 50%; 
  background-image: linear-gradient(-30deg,#cac8cb,#fffdfe,#cac8cb);  
  background-color: #fff;
  box-shadow: 10rpx 10rpx 20rpx #89898b;
}
.circle1{
  position: absolute;
  left: 8rpx;
  top: 8rpx;
  bottom:8rpx;
  right: 8rpx;
  border-radius: 50%;
  background-image: linear-gradient(30deg,#a7a5a6,#a3a1a2,#a7a5a6);  
  box-shadow: 1rpx 1rpx 4rpx #89898b;
}
.circle2{
  position: absolute;
  left: 12rpx;
  top: 12rpx;
  bottom:12rpx;
  right: 12rpx;
  border:2rpx solid #ff0a36;
  border-radius: 50%;
  background-color: #fff4f0;
  box-shadow: 1rpx 1rpx 5rpx #efe4ec;
}
.circle3{
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  bottom:0rpx;
  right: 0rpx;
  border:4rpx solid #5d0008;
  border-radius: 50%;
  background-color: #ff0a36;
  box-shadow: 1rpx 1rpx 14rpx #000 inset;
}
.radio{
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  bottom:0rpx;
  right: 0rpx;
  width: 40rpx;
  height: 40rpx;
  margin: auto;
  border-radius: 50%;
  background:linear-gradient(90deg,#fff 0%,#fff 5%, #ada5a3 5%,#ada5a3 95%,#fff 95%,#fff 100%); 
  box-shadow: 1rpx 1rpx 5rpx #000;
}
.second{
  position: absolute;
  left: 0rpx;
  top: 15rpx;
  /* bottom:0rpx; */
  right: 0rpx;
  width: 50rpx;
  height: 50rpx;
  margin: auto;
  border-radius: 50%;
  background:linear-gradient(90deg,#fff 0%,#fff 5%, #ada5a3 5%,#ada5a3 95%,#fff 95%,#fff 100%); 
  box-shadow: 1rpx 1rpx 5rpx #000;
  transform-origin: 25rpx 290rpx;
  transform: rotateZ(45deg);
  transition: all 1s linear;
}
.min{
  position: absolute;
  left: 0rpx;
  top: 70rpx;
  /* bottom:0rpx; */
  right: 0rpx;
  width: 20rpx;
  height: 200rpx;
  margin: auto;
  border-radius: 20rpx;
  background:#ada5a3; 
  box-shadow: 1rpx 1rpx 5rpx #000;
  transition: all 1s linear;
   transform-origin: 10rpx 240rpx;
}
.hour{
  position: absolute;
  left: 0rpx;
  top: 120rpx;
  /* bottom:0rpx; */
  right: 0rpx;
  width: 30rpx;
  height: 150rpx;
  margin: auto;
  border-radius: 20rpx;
  background:#ada5a3; 
  box-shadow: 1rpx 1rpx 5rpx #000;
  transition: all 1s linear;
   transform-origin: 15rpx 185rpx;
}