/* pages/third/third.wxss */
.navbar{
  display: flex;
  border-bottom: #d4d4d4 solid 1px;
  background-color: #f5f5f5;
  padding:0 25rpx;
}
.content{
  background-color: #f2f2f2;
  min-height: 100vh;
  width: 100vw;
}
.item{
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #7b879d;
  padding: 25rpx 0;
}
.item text{
  padding: 22rpx;
}
.item text.active{
  color: #3385ff;
  border-bottom: #3385ff solid 2px;
}
.search-form{
  display: flex;
  background-color: #fff;
  border-bottom: #d4d4d4 solid 1rpx;
  align-items: center;
}
.left{
  width: 100rpx;
  color: #555;
  text-align: center;
}
.middle{
  padding-right: 30rpx;
  flex: 1;
}
.middle input{
  height: 100rpx;
  font-size: 30rpx;
  position: relative;
  padding-left: 40rpx;
}
.right{
  padding-right: 30rpx;
}

.middle input:before{
  content: "‚óè";
  color: #F50;
  position: absolute;
  left: 0rpx;
  top: 30rpx;
}
.middle input:first-child{
  border-bottom: #d4d4d4 solid 1rpx;
}
.middle input:first-child::before{
  color: #62B211;  
}
.right button{
    border: 1px #3385ff solid;
    color: #3385ff;
    border-radius: 50rpx;
    background-color: #fff;
    font-size: 30rpx;
}
.sel-result{
  padding:20rpx;
}
.res-list{
  background-color: #fff;
  border: 1rpx solid #d4d4d4;
  padding: 20rpx;
  border-radius: 5rpx;  
}
.title{
  font-size: 32rpx;
  color: #3b3b3b;
  font-weight: bold;
}
.info text{
    border-left: 1rpx solid #d9dadb;
    padding:0 24rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    color: #848484;
    font-size: 26rpx;
}
.info text:first-child{
  border-left: 0;
  padding-left: 0;
}